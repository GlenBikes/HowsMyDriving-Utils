{
  "compilerOptions": {
    "lib": ["es6"],
    "module": "commonjs",
    "target": "es5",
    "moduleResolution": "node",
    "declaration": true,
    "rootDir": ".",
    "outDir": "dist",
    "allowJs": true,
    "preserveSymlinks": true,
    "downlevelIteration": true,
    "types" : ["node", "mocha"]
  },
  "include": [
    "index.ts",
    "lib/**/*.js",
    "locales/**/*.js",
    "src/**/*.ts",
    "test/**/*.ts"  
  ],
  "exclude": [
    "node_modules",
    "log/**"
  ]
}
